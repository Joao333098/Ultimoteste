
{
  "app": {
    "name": "Transcription App",
    "version": "1.0.0",
    "port": 5000
  },
  "ai": {
    "model": "glm-4.5",
    "maxTokens": 8192,
    "temperature": 0.6,
    "endpoint": "https://open.bigmodel.cn/api/paas/v4/chat/completions",
    "translationModel": "glm-4.5",
    "translationMaxTokens": 2048,
    "translationTemperature": 0.1,
    "doSample": true,
    "stream": false,
    "thinking": {
      "type": "enabled"
    },
    "topP": 0.95,
    "responseFormat": {
      "type": "text"
    }
  },
  "translation": {
    "defaultTargetLanguage": "pt-BR",
    "supportedLanguages": [
      "pt-BR",
      "en-US", 
      "es-ES"
    ]
  },
  "transcription": {
    "autoEnhancement": true,
    "sentimentAnalysis": true
  }
}
